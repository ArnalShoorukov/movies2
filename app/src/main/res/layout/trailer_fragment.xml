<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:layout_width="85dp"
        android:layout_height="60dp"
        app:srcCompat="@android:drawable/ic_media_play"
        android:id="@+id/trailerImage"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:background="@mipmap/ic_launcher"/>

    <TextView
        android:text="Trailer Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trailerText"
        app:layout_constraintRight_toRightOf="@+id/trailerImage"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/trailerImage"
        app:layout_constraintLeft_toLeftOf="@+id/trailerImage"
        />
</android.support.constraint.ConstraintLayout>